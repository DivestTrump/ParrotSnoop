<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/permissionItemTemplate"
    android:layout_width="match_parent"
    android:layout_height="@dimen/component_size"
    android:gravity="start|center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/permissionGrantedImageView"
        android:layout_width="@dimen/element_size"
        android:layout_height="@dimen/element_size"
        android:layout_margin="@dimen/margin_inner"
        android:layout_weight="1"
        android:contentDescription="@string/no_permissions_text"
        app:srcCompat="@drawable/ic_x_red" />

    <TextView
        android:id="@+id/permissionNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="14"
        android:text="@string/no_permissions_text" />

</LinearLayout>